{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "backgroundImage": "{{0}}",
    "body": [
        {
            "type": "Container",
            "seperation": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "{{1}}",
                    "weight": "bolder",
                    "size": "medium",
                    "wrap": true,
                    "maxLines": 2
                },
                {
                    "type": "TextBlock",
                    "text": "{{2}}",
                    "size": "default",
                    "wrap": true
                }
            ]
        }
    ]
}